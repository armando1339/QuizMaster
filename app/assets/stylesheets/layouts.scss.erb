// new session //
#new_session{
  background-image: url('<%= asset_path("fondoBeo.png") %>');
  width: 100%;
  .new_user_session_form{ 
    position: fixed;
    height: 100px;
    left: 50%;
    margin-top: -50px;  
    margin-left: -450px;
    top: 50%;
    z-index: 1;
    box-sizing: border-box;
    width: 900px;
    form{
      display: inline-block;
      margin: 0 auto;
      padding: 0;
      width: 100%;
      .field{
        float: left; 
        margin: 0;
        width: 40%;
        input[type="text"], input[type="password"] {
          background-color: transparent;
          border: none;
          border-bottom: 4px solid $color_text_1;
          color: $color_text_1;
          display: block;
          opacity: 0.7;
          -moz-opacity: 0.7;
          filter:alpha(opacity=7);
          border-radius: 2px;
          box-sizing: border-box;
          font-size: 26px;
          height: 100%;
          margin: 0 auto;
          padding: 10px;
          text-align: center;
          width: 90%;
        }
      }
      .actions{
        float: left; 
        height: 100px;
        margin: 0;
        width: 20%;
        input[type="submit"]{
          background-color: transparent ;
          border: 4px solid $color_text_1;
          border-radius: 2px;
          box-sizing: border-box;
          color: $color_text_1;
          cursor: pointer;
          display: block;
          font-size: 25px;
          height: 100%;
          letter-spacing: 1px;
          margin: 0 auto;
          text-align: center;
          text-decoration: none;
          width: 90%;
        }
        input[type="submit"]:hover{
          border: 4px solid #BABCBC;
          color: #BABCBC;
          -webkit-transition: color 0.2s, border 0.2s;
          -moz-transition: color 0.2s, border 0.2s;
          transition: color 0.2s, border 0.2s;
        }
      }
      .nav_options{
        display: inline-block;
        margin-top: 50px;
        text-align: center;
        width: 100%;
        a{
          color: black;
          font-size: 18px;
          text-decoration: none;
        }
      }
    }
  }
  .background_session{
    overflow: hidden;
    position: relative;
    height: 750px;
    z-index: 1;
    width:100%;
    img{
