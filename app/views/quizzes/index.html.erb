<div id="users_quizzes_view">
  <div class="users_quizzes_table">

    <h1>List of all quizzes</h1>
    <h4>Choose a quiz and test your knowledge. Enjoy it!</h4>
    <p>
      <%= link_to material_icon.history.md_24, users_history_of_quizzes_path, :"data-tooltip" => "My history of quizzes" %>
      <%= link_to material_icon.account_box.md_24, user_path(current_user), :"data-tooltip" => "My account" %>
    </p>

    <%= form_for_filterrific @filterrific do |f| %>
      <div class="searcher">
        <%= f.text_field(:search_query, class: 'filterrific-periodically-observed', placeholder: "Search", autofocus: false) %>
      </div>
    <% end %>

    <%= render(partial: 'quizzes/list', locals: { quizzes: @quizzes }) %>

  </div>
</div>
